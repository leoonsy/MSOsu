<UserControl x:Class="MSOsu.View.CorrelationDiagramUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MSOsu.View"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="800" FontSize="14" >
    <Grid>
        <Grid Grid.Column="0">
            <Grid.Background>
                <RadialGradientBrush>
                    <GradientStop Color="#FFE6E6E6" Offset="0"/>
                    <GradientStop Color="#FFF7F7F7" Offset="1"/>
                </RadialGradientBrush>
            </Grid.Background>
            <ContentPresenter x:Name="cpPairDiagram" />
        </Grid>
        <Canvas x:Name="cnDiag" Margin="40"/>
    </Grid>
</UserControl>
