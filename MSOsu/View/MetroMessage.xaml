<Controls:MetroWindow x:Class="MSOsu.View.MetroMessage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MSOsu.View"
        mc:Ignorable="d"              
        GlowBrush="{DynamicResource AccentColorBrush}"
        Title="Информация" Height="200" Width="350" WindowStartupLocation="CenterScreen" Background="#FFF9F9F9" MinWidth="160" MinHeight="80">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="2*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid>
                <TextBlock x:Name="tbInformation" HorizontalAlignment="Center" VerticalAlignment="Center" Text="Информация" TextWrapping="Wrap" Margin="50 0 50 0" Foreground="Black" TextAlignment="Justify" />
            </Grid>
            <Grid Grid.Row="1" Background="#FFC7C7C7">
                <Button Content="ОК" Width="130" Padding="10" Click="Button_Click" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Grid>
        </Grid>
    </ScrollViewer>
</Controls:MetroWindow>
